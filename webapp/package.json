{
  "name": "expenses-form",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://davidtorralba.com/expenses-form",
  "type": "module",
  "dependencies": {
    "axios": "^1.7.7",
    "firebase": "^9.23.0",
    "nanoid": "^5.0.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "rxjs": "^7.8.1",
    "styled-components": "^6.1.13",
    "web-vitals": "^0.2.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ci": "vitest run",
    "preview": "vite preview",
    "clear_build": "rm -rf ./dist",
    "build_serve": "npm run clear_build && npm run build && serve -s build/",
    "deploy": "gh-pages --dist=./dist --branch=gh-pages --repo=git@github.com:dtgoitia/expenses-form.git",
    "clean_gh_pages_cache": "rm -rf ./node_modules/.cache/gh-pages",
    "deploy_from_local": "npm run clear_build && npm run build && npm run clean_gh_pages_cache && npm run deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "fsevents": "2.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "gh-pages": "^6.2.0",
    "jest-watch-typeahead": "^2.2.2",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "react-error-overlay": "^6.0.11",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^4.5.5",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-pwa": "^0.16.7",
    "vitest": "^0.32.4"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@nanoid)/"
    ]
  }
}
