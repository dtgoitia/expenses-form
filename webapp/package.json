{
  "name": "expenses-form",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://davidtorralba.com/expenses-form",
  "type": "module",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^26.0.24",
    "@types/node": "^17.0.42",
    "@types/postcss-flexbugs-fixes": "^4.2.1",
    "@types/react": "^16.14.26",
    "@types/react-dom": "^16.9.16",
    "axios": "^0.25.0",
    "firebase": "^9.13.0",
    "nanoid": "^4.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^7.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.3.0",
    "rxjs": "^7.5.5",
    "styled-components": "^5.3.5",
    "typescript": "^4.7.3",
    "web-vitals": "^0.2.4",
    "workbox-core": "^5.1.4",
    "workbox-expiration": "^5.1.4",
    "workbox-precaching": "^5.1.4",
    "workbox-range-requests": "^5.1.4",
    "workbox-routing": "^5.1.4",
    "workbox-strategies": "^5.1.4"
  },
  "scripts": {
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ci": "vitest run",
    "preview": "vite preview",
    "clear_build": "rm -rf ./dist",
    "build_serve": "npm run clear_build && npm run build && serve -s build/",
    "deploy": "gh-pages --dist=./dist --branch=gh-pages --repo=git@github.com:dtgoitia/expenses-form.git",
    "clean_gh_pages_cache": "rm -rf ./node_modules/.cache/gh-pages",
    "deploy_from_local": "npm run clear_build && npm run build && npm run clean_gh_pages_cache && npm run deploy"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "optionalDependencies": {
    "fsevents": "2.1.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "gh-pages": "^5.0.0",
    "jest-watch-typeahead": "^0.6.5",
    "postcss": "^8.4.47",
    "prettier": "^2.8.8",
    "react-error-overlay": "6.0.9",
    "serve": "^13.0.2",
    "stylelint": "^15.6.3",
    "stylelint-config-recommended": "^12.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-checker": "^0.6.0",
    "vite-plugin-pwa": "^0.16.4",
    "vitest": "^0.32.2"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@nanoid)/"
    ]
  }
}
